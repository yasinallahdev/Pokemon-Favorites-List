<!doctype html>
<html>
<head>
    <title>Favorite Pok√©mon Listing</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="profile.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Your List</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>Profile Information</strong><br>
                        <strong>E-Mail</strong>: <%= user.local.email %><br>
                        <!-- TODO: Actually get account dates to appear -->
                        <!-- <strong>Account Creation Date</strong>: <%= user.local.creationDate %><br> -->
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <h3>Your Favorite Pok√©mon</h3>
          <ol class="messages">
          <% for(var i=0; i<favoritePokemon.length; i++) {%>
            <li class="message">
              <span class="hiddenItem"><%= user.local.email %></span>
              <span><%= favoritePokemon[i].pokemonSpecies %></span>
              <span class="trashCan">üóëÔ∏è</span>
            </li>
          <% } %>
          </ol>

          <h2>Add a Pok√©mon to your list</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input class="hiddenItem" type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="Pok√©mon Species" name="pokemonSpecies">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
